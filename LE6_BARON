#include <stdio.h>

// Functions
float addition(float num1, float num2);
float subtraction(float num1, float num2);
float multiplication(float num1, float num2);
float division(float num1, float num2);
void displayMenu();
int getChoice();
void getNumbers(float *num1, float *num2);

int main() {
    int choice;
    float num1, num2, result;
    
    printf("Multiple functions to perform Arithmetic Operations\n\n");
    
    do {
        // Display menu 
        displayMenu();
        choice = getChoice();
        
        // Check if user wants to exit
        if (choice == 5) {
            printf("\nExiting Program\n");
            break;
        }
        
        // Input Numbers
        getNumbers(&num1, &num2);
        
        // Perform calculation based on choice
        switch (choice) {
            case 1:
                result = addition(num1, num2);
                printf("\nResult: %.2f + %.2f = %.2f\n", num1, num2, result);
                break;
            case 2:
                result = subtraction(num1, num2);
                printf("\nResult: %.2f - %.2f = %.2f\n", num1, num2, result);
                break;
            case 3:
                result = multiplication(num1, num2);
                printf("\nResult: %.2f * %.2f = %.2f\n", num1, num2, result);
                break;
            case 4:
                if (num2 == 0) {
                    printf("\nError: Division by zero is not allowed!\n");
                } else {
                    result = division(num1, num2);
                    printf("\nResult: %.2f / %.2f = %.2f\n", num1, num2, result);
                }
                break;
            default:
                printf("\nInvalid choice! Please select a valid option (1-5).\n");
                break;
        }
        
     
        printf("\n==================================================\n");
        
    } while (choice != 5);
    
    return 0;
}

// Function to display the menu
void displayMenu() {
    printf("Choose an operation:\n");
    printf("1. Addition\n");
    printf("2. Subtraction\n");
    printf("3. Multiplication\n");
    printf("4. Division\n");
    printf("5. Exit Program\n");
    printf("Enter your choice (1-5): ");
}

// Functions
int getChoice() {
    int choice;
    scanf("%d", &choice);
    return choice;
}

// Function of two numbers
void getNumbers(float *num1, float *num2) {
    printf("\nEnter first number: ");
    scanf("%f", num1);
    printf("Enter second number: ");
    scanf("%f", num2);
}

// Function to perform addition
float addition(float num1, float num2) {
    return num1 + num2;
}

// Function to perform subtraction
float subtraction(float num1, float num2) {
    return num1 - num2;
}

// Function to perform multiplication
float multiplication(float num1, float num2) {
    return num1 * num2;
}

// Function to perform division
float division(float num1, float num2) {
    return num1 / num2;
}
