#include <stdio.h>
#include <stdlib.h>
#include <string.h>

const int MAX_NAME_LENGTH = 50;
const int MAX_COURSE_LENGTH = 50;
const int MAX_LINE_BUFFER = 256;
const char FILENAME[] = "student_records.txt";

void write_student_records() {
    FILE *file_ptr;
    int num_students, i, age;
    char name[MAX_NAME_LENGTH];
    char course[MAX_COURSE_LENGTH];
    
    file_ptr = fopen(FILENAME, "w");

    if (file_ptr == NULL) {
        printf("Error: Could not open the file %s for writing.\n", FILENAME);
        return;
    }

    printf("  WRITING STUDENT DATABASE\n");
    printf("==================================\n");
    
    printf("How many students do you want to record? ");
    if (scanf("%d", &num_students) != 1 || num_students <= 0) {
        printf("Invalid input. Closing file.\n");
        fclose(file_ptr);
        return;
    }
    while (getchar() != '\n'); 

    for (i = 1; i <= num_students; i++) {
        printf("\nStudent %d\n", i);

        printf("Enter Name: ");
        fgets(name, MAX_NAME_LENGTH, stdin); 
        name[strcspn(name, "\n")] = 0; 
        
        printf("Enter Age: ");
        scanf("%d", &age);
        
        while (getchar() != '\n'); 

        printf("Enter Course: ");
        fgets(course, MAX_COURSE_LENGTH, stdin);
        course[strcspn(course, "\n")] = 0;
        
        fprintf(file_ptr, "Student %d\n", i);
        fprintf(file_ptr, "Name: %s\n", name);
        fprintf(file_ptr, "Age: %d\n", age);
        fprintf(file_ptr, "Course: %s\n", course);
        fprintf(file_ptr, "------\n"); 
    }

    fclose(file_ptr);
    printf("\nStudent database successfully saved to file: %s\n", FILENAME);
}

void read_student_records() {
    FILE *file_ptr;
    char buffer[MAX_LINE_BUFFER];
    
    printf("\n\nREADING STUDENT DATABASE\n");

    file_ptr = fopen(FILENAME, "r");

    if (file_ptr == NULL) {
        printf("Error: Could not open the file %s for reading.\n", FILENAME);
        return;
    }

    printf("\nContents of %s:\n", FILENAME);
    printf("----------------------------------\n");
    
    while (fgets(buffer, MAX_LINE_BUFFER, file_ptr) != NULL) {
        if (strcmp(buffer, "------\n") != 0) {
            printf("%s", buffer);
        }
    }
    
    printf("----------------------------------\n");


    fclose(file_ptr);
}

int main() {
    
    write_student_records();
    
    read_student_records();

    return 0;
}
