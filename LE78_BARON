#include <stdio.h>
#include <string.h> 

void findLargestElement();
void countVowelsInString();

void findLargestElement() {
    int num;     
    int largest; 
    int l;       

    printf("Enter number of elements in the array: ");
    scanf("%d", &num);

    int arr[num]; 
    printf("Enter %d elements:\n", num);

    for (l = 0; l < num; l++) {
        scanf("%d", &arr[l]);

        if (l == 0) {
            largest = arr[l];
        } 
        else if (arr[l] > largest) {
            largest = arr[l];
        }
    }

    printf("The largest element in the array is: %d\n", largest);
}

void countVowelsInString() {
    char str[100]; 
    int count = 0; 
    int i; 

    int c;
    while ((c = getchar()) != '\n' && c != EOF); 

    printf("Enter a string: ");
    
    fgets(str, sizeof(str), stdin);

    str[strcspn(str, "\n")] = 0;

    for (i = 0; str[i] != '\0'; i++) {
        char ch = str[i]; 
        
        // Checks explicitly for both lowercase and uppercase vowels
        if (ch == 'a' ||  
            ch == 'e' ||  
            ch == 'i' || 
            ch == 'o' || 
            ch == 'u' ) 
        {
            count++; 
        }
    }

    printf("The number of vowels in the string is: %d\n", count);
}

int main() {
    findLargestElement();

    printf("\n");

    countVowelsInString();

    return 0;
}
